{
  "appId": "com.piskelapp.piskel",
  "productName": "Piskel",
  "directories": {
    "output": "electron-dist",
    "buildResources": "misc/desktop"
  },
  "files": [
    "dest/prod/**/*",
    "electron/**/*",
    "package.json",
    "node_modules/**/*"
  ],
  "extraResources": [
    {
      "from": "src",
      "to": "src"
    }
  ],
  "mac": {
    "category": "public.app-category.graphics-design",
    "target": [
      {
        "target": "dmg",
        "arch": ["x64", "arm64"]
      }
    ],
    "icon": "misc/desktop/logo.icns",
    "hardenedRuntime": true,
    "entitlements": "misc/desktop/entitlements.mac.plist",
    "entitlementsInherit": "misc/desktop/entitlements.mac.plist"
  },
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": ["x64"]
      }
    ],
    "icon": "dest/prod/logo.png"
  },
  "linux": {
    "target": [
      {
        "target": "AppImage",
        "arch": ["x64"]
      }
    ],
    "icon": "misc/desktop/logo.png",
    "category": "Graphics"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true,
    "shortcutName": "Piskel"
  },
  "dmg": {
    "contents": [
      {
        "x": 130,
        "y": 220
      },
      {
        "x": 410,
        "y": 220,
        "type": "link",
        "path": "/Applications"
      }
    ]
  }
}
