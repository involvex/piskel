{
  "name": "piskel",
  "version": "0.106.0",
  "description": "Pixel art editor",
  "author": "Involvex",
  "homepage": "http://github.com/piskelapp/piskel",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/involvex/piskel.git"
  },
  "files": [
    "dest/prod",
    "misc/scripts/piskel-root"
  ],
  "bin": {
    "piskel-root": "./misc/scripts/piskel-root",
    "piskel-cli": "./cli/index.js"
  },
  "main": "./electron/main.js",
  "scripts": {
    "dev": "vite",
    "dev:legacy": "grunt play",
    "prod": "grunt serve",
    "prod:test": "grunt serve-test",
    "prod:modern": "vite preview",
    "format": "grunt eslint --fix",
    "preversion": "grunt test build",
    "postversion": "git push && git push --tags && npm publish",
    "release": "grunt && node ./bin/copy-to-piskel-website",
    "release-piskel-web": "grunt && node ./bin/copy-to-piskel-web",
    "build": "vite build",
    "build:legacy": "grunt build",
    "build:modern": "vite build",
    "build:desktop": "npm run build:legacy && npm run package:desktop",
    "build:mac": "npm run build:legacy && npm run package:macos",
    "build:windows": "npm run build:legacy && npm run package:windows",
    "build:linux": "npm run build:legacy && npm run package:linux",
    "build:all": "npm run build:legacy && npm run package:all",
    "optimize:modern": "esbuild dist/web/**/*.js --minify --outdir=dist/web/optimized --target=es2018",
    "package:desktop": "grunt build-nwjs-modern",
    "package:windows": "grunt build-nwjs-windows",
    "package:macos": "grunt build-nwjs-macos",
    "package:linux": "grunt build-nwjs-linux",
    "package:all": "grunt build-all-platforms",
    "package:legacy": "grunt build-nwjs-legacy",
    "start:nw": "grunt build && .\\cache\\nwjs-v0.48.0-win-x64\\nw.exe .",
    "start:modern": "vite preview",
    "start:electron": "vite && npx electron ./electron",
    "electron:dev": "npx electron electron/main.js ",
    "electron:start": "npm run electron:build && npx electron ./electron",
    "electron:build": "grunt build",
    "electron:build:app": "npm run build && grunt build && electron-builder",
    "e2e": "npx playwright test",
    "e2e:interactive": "npx playwright test --ui",
    "unit-tests": "karma start",
    "unit-tests:watch": "karma start --auto-watch --no-single-run",
    "test": "npm run unit-tests && npm run e2e",
    "test:modern": "npm run build:modern && npm run e2e",
    "test-ci": "bash ./run-test-ci.sh",
    "test-ci:modern": "npm run build:modern && bash ./run-test-ci.sh"
  },
  "devDependencies": {
    "@playwright/test": "^1.52.0",
    "autoprefixer": "^10.4.16",
    "dateformat": "4.5.1",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.0",
    "esbuild": "^0.19.0",
    "fs-extra": "10.0.0",
    "gifuct-js": "^2.1.2",
    "grunt": "1.6.1",
    "grunt-cli": "^1.4.3",
    "grunt-contrib-clean": "2.0.0",
    "grunt-contrib-concat": "1.0.1",
    "grunt-contrib-connect": "3.0.0",
    "grunt-contrib-copy": "1.0.0",
    "grunt-contrib-jshint": "3.0.0",
    "grunt-contrib-uglify": "5.0.1",
    "grunt-contrib-watch": "^1.1.0",
    "grunt-eslint": "23.0.0",
    "grunt-include-replace": "5.0.0",
    "grunt-jscs": "3.0.1",
    "grunt-karma": "4.0.2",
    "grunt-leading-indent": "0.2.0",
    "grunt-nw-builder": "^4.13.0",
    "grunt-replace": "2.0.2",
    "grunt-spritesmith": "^6.9.0",
    "jasmine-core": "3.8.0",
    "karma": "6.3.4",
    "karma-chrome-launcher": "^3.2.0",
    "karma-jasmine": "4.0.1",
    "load-grunt-tasks": "5.1.0",
    "nw": "^0.80.0",
    "nw-builder": "^4.16.0",
    "png-ts": "^0.0.3",
    "postcss": "^8.4.31",
    "puppeteer": "^24.10.0",
    "rmdir": "1.2.0",
    "terser": "^5.24.0",
    "typescript": "^5.8.3",
    "vite": "^5.0.0",
    "wait-on": "^7.2.0",
    "concurrently": "^8.2.0"
  },
  "window": {
    "title": "Piskel",
    "icon": "dest/prod/logo.png",
    "toolbar": false,
    "width": 1000,
    "height": 700
  },
  "dependencies": {
    "jquery": "^3.7.1",
    "minimist": "^1.2.5",
    "nw": "^0.106.0",
    "phantomjs": "^1.9.20",
    "spectrum": "^1.0.1",
    "gif.js": "^0.2.0",
    "jszip": "^3.10.1",
    "canvas-toBlob": "^1.0.0"
  }
}
